@model Author
@{
    ViewData["Title"] = "Login";
    var loggedInId = Context.Session.GetInt32("LoggedInAuthor"); 
}


<div>
    <h2>@Model.Name</h2>
    @if(Model.posts.Count < 1)
    {
        <h2>This author has no posts</h2>
    }
    else
    {
        foreach(var p in Model.posts)
        {
            <div style="border: 1px solid black;margin-bottom:5px">
                <h2>@p.Title</h2>
                <h3>Content: @p.Content</h3>
                <p>Description: @p.Description</p>
                @if(Model.Id == loggedInId)
                {
                    <a asp-controller="Home" asp-action="DeletePost" asp-route-id="@p.Id">Delete</a>
                    <a asp-controller="Home" asp-action="EditPost" asp-route-id="@p.Id">Edit</a>
                }
            </div>
        }
    }


</div>

       
